doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sistema de Información de Laboratorio | #{pageTitle}

    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")

    // Select2
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css")

    // Bootstrap Icons
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

    // DataTables con Bootstrap 4
    link(rel="stylesheet", href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css")

    // Estilos propios
    link(rel="stylesheet", href="/css/style.css")

    block head

  body
    block navbar
      if !role
        include ../partials/nav.pug
      else if role === 'paciente'
        include ../partials/nav_paciente.pug
      else
        include ../partials/nav_empleado.pug

    .container.mt-4
      block content

    // JS: jQuery y Bootstrap Bundle
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")

    // Select2
    script(src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js")

    // DataTables JS + Bootstrap 4 integration
    script(src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js")
    script(src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js")

    // Inicialización
    script.
      $(document).ready(function(){
        // Inicializar Select2
        $('.select2').select2({
          width: '100%',
          placeholder: 'Seleccione exámenes'
        });

        // Inicializar DataTables
        $('.datatable').DataTable({
          paging: true,
          pageLength: 5,
          lengthMenu: [[5,10,25,50,-1],[5,10,25,50,"Todos"]],
          ordering: true,
          searching: true,
          info: true,
          language: {
            sProcessing:    "Procesando...",
            sLengthMenu:    "Mostrar _MENU_ registros",
            sZeroRecords:   "No se encontraron resultados",
            sEmptyTable:    "Ningún dato disponible en esta tabla",
            sInfo:          "Mostrando _START_ al _END_ de _TOTAL_ registros",
            sInfoEmpty:     "Mostrando 0 al 0 de 0 registros",
            sInfoFiltered:  "(filtrado de _MAX_ registros)",
            sSearch:        "Buscar:",
            oPaginate: {
              sFirst:    "Primero",
              sLast:     "Último",
              sNext:     "Siguiente",
              sPrevious: "Anterior"
            }
          }
        });
      });

    block scripts



